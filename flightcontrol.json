{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "envVariables": {},
  "environments": [
    {
      "name": "dev",
      "id": "dev",
      "region": "us-east-1",
      "source": { "pr": false, "branch": "main", "trigger": "push" },
      "services": [
        {
          "id": "prisma-studio",
          "name": "Prisma Studio",
          "type": "fargate",
          "buildType": "nixpacks",
          "cpu": 0.25,
          "memory": 0.5,
          "buildCommand": "npm i pm2 && npx prisma generate && npx prisma db migrate push",
          "startCommand": "pm2 start \"npx prisma studio\" && caddy run",
          "port": 80,
          "envVariables": {
            "NIXPACKS_PKGS": "caddy",
            "PRISMA_STUDIO_USERNAME": "test",
            "PRISMA_STUDIO_PASSWORD_HASH": {
              "fromParameterStore": "PRISMA_STUDIO_PASSWORD_HASH"
            },
            "DATABASE_URL": {
              "fromService": {
                "id": "database",
                "value": "dbConnectionString"
              }
            }
          }
        },
        {
          "id": "database",
          "name": "Database",
          "type": "rds",
          "instanceSize": "db.t4g.micro",
          "private": false,
          "storage": 20,
          "maxStorage": 100,
          "autoUpgradeMinorVersions": true,
          "applyChangesImmediately": false,
          "deletionProtection": false,
          "connectionStringEnvVarName": "DATABASE_URL",
          "engine": "postgres",
          "engineVersion": "15",
          "port": 5432
        }
      ]
    }
  ]
}
